	"main": "",
	"name": "pyright-exec",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"format": "run-p format:biome format:markdownlint",
		"format:biome": "biome format --write",
		"format:markdownlint": "markdownlint -f ./*.md doc/*.md",
		"lint": "run-p lint:biome lint:md",
		"lint:biome": "biome check",
		"lint:md": "markdownlint *.md */*.md",
		"test:biome": "biome check",
		"test:md": "markdownlint *.md",
		"test": "run-s test:biome test:md"
	},
	"version": "1.0.0",
	"devDependencies": {
		"@biomejs/biome": "2.0.0",
		"markdownlint-cli": "^0.43.0",
		"npm-run-all2": "^7.0.2"
	},
	"engines": {
		"npm": "Use pnpm instead of npm!"
	},
	"packageManager": "pnpm@10.5.2"
}
